{
    "compilerOptions": {
        "target": "es2018",
        "module": "CommonJS",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "skipLibCheck": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "jsx": "preserve",
        "stripInternal": true,
        "rootDirs": [
            "./src",
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "paths": {
            "@legendapp/state": [
                "./src/index"
            ],
            "@legendapp/state/persist": [
                "./src/persist"
            ],
            "@legendapp/state/react": [
                "./src/react"
            ],
            "@legendapp/state/helpers/fetch": [
                "./src/lib/helpers/fetch"
            ],
        },
        "resolveJsonModule": true
    },
    "include": [
        "src/",
        "tests/"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "types.d.ts",
        "src/lib/types"
    ],
}